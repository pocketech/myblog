    "@tailwindcss/typography": "^0.4.1",
    "cheerio": "^1.0.0-rc.10",
    "chrome-aws-lambda": "^10.1.0",
    "dayjs": "^1.10.6",
    "framer-motion": "^4",
    "microcms-js-sdk": "^1.2.0",
    "next": "11.1.0",
    "next-seo": "^4.26.0",
    "puppeteer-core": "^10.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.2.0",
    "react-share": "^4.4.0"
