{
  "name": "myblog",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": "npmではなくyarnを使用してください"
  },
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "NODE_OPTIONS='--inspect' next dev -p 3035",
    "dev:path": "pathpida --ignorePath .gitignore --watch --output src/libs",
    "package-update": "yarn upgrade-interactive --latest",
    "build": "pathpida --ignorePath .gitignore --output src/libs && next build",
    "start": "next start",
    "test": "jest --watch",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --cache .",
    "lint:next": "next lint",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "check-types": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.7.4",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@n8tb1t/use-scroll-position": "^2.0.3",
    "@tailwindcss/typography": "^0.5.0",
    "@types/dompurify": "^2.3.2",
    "cheerio": "^1.0.0-rc.10",
    "chrome-aws-lambda": "^10.1.0",
    "dayjs": "^1.10.7",
    "dompurify": "^2.3.4",
    "framer-motion": "^5.5.5",
    "microcms-js-sdk": "^2.0.0",
    "next": "12.0.7",
    "next-seo": "^4.28.1",
    "puppeteer-core": "^13.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.3.1",
    "react-share": "^4.4.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^1.7.0",
    "@next/eslint-plugin-next": "^12.0.7",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/gtag.js": "^0.0.8",
    "@types/react": "17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "autoprefixer": "^10.4.1",
    "babel-jest": "^27.4.6",
    "eslint": "8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.6",
    "lint-staged": "^12.1.5",
    "npm-run-all": "^4.1.5",
    "pathpida": "^0.17.0",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "react-test-renderer": "^17.0.2",
    "tailwindcss": "^3.0.10",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": "yarn fix:eslint",
    "*": "yarn fix:prettier"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
